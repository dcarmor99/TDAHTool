FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# ðŸ‘‡ Ojo: estamos dentro del contexto ./backend, asÃ­ que es 'requirements.txt'
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# ðŸ‘‡ Copiamos TODO el backend (api.py, utils/, model/, __init__.pyâ€¦) a /app/backend
COPY . /app/backend

EXPOSE 8000
CMD ["uvicorn", "backend.api:app", "--host", "0.0.0.0", "--port", "8000"]
